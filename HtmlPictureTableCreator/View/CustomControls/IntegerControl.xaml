<UserControl
    x:Class="HtmlPictureTableCreator.View.CustomControls.IntegerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HtmlPictureTableCreator.View.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <local:IntegerControl x:Key="IntegerControl" />
    </UserControl.Resources>
    <TextBox
        Name="TextBox"
        PreviewTextInput="TextBox_OnPreviewTextInput"
        Text="{Binding Source={StaticResource IntegerControl}, Path=Value}" />
</UserControl>
