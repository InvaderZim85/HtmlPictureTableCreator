<Window x:Class="HtmlPictureTableCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HtmlPictureTableCreator"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="HTML - Picture table creator"
        Width="525"
        Height="683.016"
        Loaded="MainWindow_OnLoaded"
        mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <xctk:InverseBoolConverter x:Key="InverseBool" />
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Settings  -->
        <GroupBox Grid.Row="0"
                  Header="Settings"
                  IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBool}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Content="Source:" />
                <TextBox Grid.Row="0"
                         Grid.Column="1"
                         Margin="3"
                         Text="{Binding Source}" />
                <Button Grid.Row="0"
                        Grid.Column="2"
                        Width="50"
                        Margin="3"
                        Command="{Binding BrowseCommand}"
                        Content="Browse" />

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Content="Create thumbnails:" />
                <CheckBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="3"
                          VerticalAlignment="Center"
                          IsChecked="{Binding CreateThumbnails}" />

                <GroupBox Grid.Row="2"
                          Grid.Column="1"
                          Header="Thumbnail settings"
                          Visibility="{Binding CreateThumbnails, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>


                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Content="Keep ratio:" />
                        <CheckBox Grid.Row="0"
                                  Grid.Column="1"
                                  Margin="3"
                                  VerticalAlignment="Center"
                                  IsChecked="{Binding KeepRatio}"
                                  IsEnabled="{Binding KeepRatioEnabled}" />

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Content="Ratio:" />

                        <ComboBox Grid.Row="1"
                                  Grid.Column="1"
                                  Margin="3"
                                  ItemsSource="{Binding RatioList, Mode=OneWay}"
                                  SelectedValue="{Binding SelectedRatio}" />

                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Content="Width:" />
                        <xctk:IntegerUpDown Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="3"
                                            ValueChanged="ThumbnailWidth_OnValueChanged"
                                            Value="{Binding ThumbnailWidth}" />

                        <Label Grid.Row="3"
                               Grid.Column="0"
                               Content="Height:" />
                        <xctk:IntegerUpDown Grid.Row="3"
                                            Grid.Column="1"
                                            Margin="3"
                                            ValueChanged="ThumbnailHeight_OnValueChanged"
                                            Value="{Binding ThumbnailHeight}" />
                    </Grid>
                </GroupBox>

                <Label Grid.Row="3"
                       Grid.Column="0"
                       Content="Columns:" />
                <xctk:IntegerUpDown Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="3"
                                    Value="{Binding ColumnCount}" />

                <Label Grid.Row="4"
                       Grid.Column="0"
                       Content="Header:" />
                <TextBox Grid.Row="4"
                         Grid.Column="1"
                         Margin="3"
                         Text="{Binding HeaderText}" />

                <Label Grid.Row="5"
                       Grid.Column="0"
                       Content="Blank target:" />
                <CheckBox Grid.Row="5"
                          Grid.Column="1"
                          Margin="3"
                          VerticalAlignment="Center"
                          IsChecked="{Binding BlankTarget}" />

                <Label Grid.Row="6"
                       Grid.Column="0"
                       Content="Image footer:" />
                <ComboBox Grid.Row="6"
                          Grid.Column="1"
                          Margin="3"
                          ItemsSource="{Binding ImageFooterList, Mode=OneWay}"
                          SelectedValue="{Binding ImageFooter}" />

                <Label Grid.Row="7"
                       Grid.Column="0"
                       Content="Create archive:" />
                <CheckBox Grid.Row="7"
                          Grid.Column="1"
                          Margin="3"
                          VerticalAlignment="Center"
                          IsChecked="{Binding CreateArchive}" />

                <Label Grid.Row="8"
                       Grid.Column="0"
                       Content="Archive name:" />
                <TextBox Grid.Row="8"
                         Grid.Column="1"
                         Margin="3"
                         IsEnabled="{Binding CreateArchive}"
                         Text="{Binding ArchiveName}" />

                <Label Grid.Row="9"
                       Grid.Column="0"
                       Content="Open page:" />
                <CheckBox Grid.Row="9"
                          Grid.Column="1"
                          Margin="3"
                          VerticalAlignment="Center"
                          IsChecked="{Binding OpenPage}" />

                <StackPanel Grid.Row="10"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                    <Button Width="50"
                            Margin="3"
                            Command="{Binding StartCommand}"
                            Content="Start" />
                    <Button Width="50"
                            Margin="3"
                            Command="{Binding ResetCommand}"
                            Content="Reset" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--  GridSplitter  -->
        <GridSplitter Grid.Row="1"
                      Height="3"
                      HorizontalAlignment="Stretch" />

        <!--  Info  -->
        <GroupBox Grid.Row="2" Header="Info">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0"
                         Margin="0,3,0,0"
                         IsReadOnly="True"
                         Text="{Binding InfoText}"
                         TextChanged="TextBoxBase_OnTextChanged"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Visible" />

                <ProgressBar Grid.Row="1"
                             Height="20"
                             Margin="3"
                             Maximum="{Binding MaxValue}"
                             Minimum="0"
                             Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Value="{Binding CurrentValue}" />

                <Label Grid.Row="1"
                       HorizontalAlignment="Center"
                       Content="{Binding Percentage}"
                       Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
